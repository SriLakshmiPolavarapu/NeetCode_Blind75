class Solution:
    def eraseOverlapIntervals(self, intervals: List[List[int]]) -> int:
        if not intervals:
            return 0

        intervals.sort(key=lambda x:x[0])

        res = [intervals[0]]
        remove = 0

        for i in range(1, len(intervals)):
            current = intervals[i]
            last = res[-1]

            if current[0] >= last[1]:
                res.append(current)
            else:
                remove +=1
                if current[1] < last[1]:
                    res[-1] = current

        return remove
